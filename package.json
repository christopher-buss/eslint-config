{
	"name": "@isentinel/eslint-config",
	"type": "module",
	"version": "0.7.0",
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@9.4.0",
	"description": "iSentinel's ESLint config",
	"author": "Christopher Buss <christopher.buss@pm.me> (https://github.com/christopher-buss)",
	"contributors": [
		"Anthony Fu <anthonyfu117@hotmail.com> (https://github.com/antfu/)"
	],
	"license": "MIT",
	"homepage": "https://github.com/christopher-buss/roblox-ts-eslint-config",
	"keywords": [
		"eslint-config",
		"roblox",
		"roblox-ts",
		"rbxts"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": "./bin/index.js",
	"files": [
		"bin",
		"dist"
	],
	"scripts": {
		"build": "nr typegen && tsup --format esm,cjs --clean --dts",
		"stub": "tsup --format esm",
		"dev": "npx @eslint/config-inspector --config eslint.config.ts",
		"build:inspector": "pnpm build && npx @eslint/config-inspector build",
		"watch": "tsup --format esm,cjs --watch",
		"lint": "eslint .",
		"typegen": "esno scripts/typegen.ts",
		"prepack": "nr build",
		"release": "bumpp && pnpm publish --p",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"peerDependencies": {
		"@eslint-react/eslint-plugin": "^1.5.8",
		"eslint": ">=8.40.0",
		"eslint-plugin-react-hooks": "^4.6.0"
	},
	"peerDependenciesMeta": {
		"@eslint-react/eslint-plugin": {
			"optional": true
		},
		"eslint-plugin-react-hooks": {
			"optional": true
		}
	},
	"dependencies": {
		"@antfu/install-pkg": "0.3.3",
		"@clack/prompts": "0.7.0",
		"@cspell/eslint-plugin": "8.10.4",
		"@eslint/compat": "1.1.0",
		"@isentinel/dict-rbxts": "1.0.1",
		"@isentinel/dict-roblox": "1.0.3",
		"@isentinel/eslint-plugin-comment-length": "1.7.3",
		"@shopify/eslint-plugin": "45.0.0",
		"@stylistic/eslint-plugin": "2.3.0",
		"@typescript-eslint/eslint-plugin": "7.15.0",
		"@typescript-eslint/parser": "7.15.0",
		"eslint-config-flat-gitignore": "0.1.5",
		"eslint-config-prettier": "9.1.0",
		"eslint-flat-config-utils": "0.2.5",
		"eslint-merge-processors": "0.1.0",
		"eslint-plugin-antfu": "2.3.4",
		"eslint-plugin-arrow-return-style": "1.3.0",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-format": "0.1.2",
		"eslint-plugin-format-lua": "0.1.0",
		"eslint-plugin-import-x": "0.5.3",
		"eslint-plugin-jsdoc": "48.5.2",
		"eslint-plugin-jsonc": "2.16.0",
		"eslint-plugin-markdown": "5.0.0",
		"eslint-plugin-no-autofix": "2.0.0",
		"eslint-plugin-perfectionist": "2.11.0",
		"eslint-plugin-promise": "6.4.0",
		"eslint-plugin-sonarjs": "1.0.3",
		"eslint-plugin-toml": "0.11.1",
		"eslint-plugin-unicorn": "54.0.0",
		"eslint-plugin-yml": "1.14.0",
		"isentinel-eslint-plugin-roblox-ts": "0.0.37",
		"jsonc-eslint-parser": "2.4.0",
		"local-pkg": "0.5.0",
		"parse-gitignore": "2.0.0",
		"picocolors": "1.0.1",
		"prettier": "3.3.2",
		"prettier-plugin-jsdoc": "1.3.0",
		"prompts": "2.4.2",
		"toml-eslint-parser": "0.10.0",
		"yaml-eslint-parser": "1.2.3",
		"yargs": "17.7.2"
	},
	"devDependencies": {
		"@antfu/ni": "0.21.12",
		"@eslint-react/eslint-plugin": "1.5.23",
		"@eslint/config-inspector": "0.5.1",
		"@isentinel/eslint-config": "workspace:*",
		"@stylistic/eslint-plugin-migrate": "2.3.0",
		"@types/eslint": "8.56.10",
		"@types/fs-extra": "11.0.4",
		"@types/node": "20.14.10",
		"@types/prompts": "2.4.9",
		"@types/yargs": "17.0.32",
		"bumpp": "9.4.1",
		"bundle-require": "5.0.0",
		"eslint": "9.6.0",
		"eslint-plugin-react-hooks": "4.6.2",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-typegen": "0.2.4",
		"esno": "4.7.0",
		"execa": "9.3.0",
		"fast-glob": "3.3.2",
		"fs-extra": "11.2.0",
		"lint-staged": "15.2.7",
		"rimraf": "5.0.7",
		"simple-git-hooks": "2.11.1",
		"tsup": "8.1.0",
		"typescript": "5.5.3"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "eslint --fix"
	}
}
