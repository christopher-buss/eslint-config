{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":pinAllExceptPeerDependencies",
		"helpers:pinGitHubActionDigests",
		"npm:unpublishSafe"
	],
	"schedule": ["* 9 * * 1"],
	"vulnerabilityAlerts": {
		"enabled": true
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["patch"],
			"groupName": "Patches",
			"groupSlug": "patch"
		}
	]
}
